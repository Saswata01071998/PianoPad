<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
<LinearLayout
    android:id="@+id/lay1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4"
    android:orientation="vertical"
    android:layout_above="@+id/lay2"
    android:background="#000000"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1.5"
        >
        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/test"
            android:text="@string/b"
            android:textSize="30sp"
            android:onClick="playB"
            android:layout_weight="0.5"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/light_blue"
            android:text="@string/h"
            android:textSize="30sp"
            android:onClick="playH"
            android:layout_weight="0.5"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/purple"
            android:text="S"
            android:textSize="30sp"
            android:onClick="play5"
            android:layout_weight="0.5"
            android:textStyle="bold"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1.5"

        >
        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/yellow2"
            android:text="@string/n"
            android:textSize="30sp"
            android:textStyle="bold"
            android:onClick="playN"
            android:layout_weight="0.5"
            />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:scaleType="fitXY"
            android:layout_margin="7dp"
            />


        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/orange"
            android:text="@string/w"
            android:textSize="30sp"
            android:onClick="playW"
            android:layout_weight="0.5"
            android:textStyle="bold"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1.5"
        >
        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/purple"
            android:text="O"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="playQ"
            android:layout_weight="0.5"
            />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="0.5"
          android:orientation="vertical"
          >
          <TextView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:drawable/dialog_holo_light_frame"
              android:layout_weight="1"
              android:text="ABCDE"
              android:textAlignment="center"
              android:textStyle="bold"
              android:textSize="25sp"
              android:textColor="#000"
              android:padding="20dp"
              />
          <Button
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@drawable/red"
              android:text="@string/question"
              android:textSize="25sp"
              android:textStyle="bold"
              />

      </LinearLayout>
        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/yelliow"
            android:text="@string/r"
            android:textSize="30sp"
            android:onClick="playR"
            android:layout_weight="0.5"
            android:textStyle="bold"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1.5"
        >
        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/skin"
            android:text="O"
            android:textSize="30sp"
            android:onClick="playQ"
            android:layout_weight="0.5"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/button10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/light_green"
            android:text="K"
            android:textSize="30sp"
            android:onClick="playM"
            android:layout_weight="0.5"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/button11"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/maron"
            android:text="@string/e"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="playE"
            android:layout_weight="0.5"
            />


    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:id="@+id/lay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:background="#000"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Previous"
            android:textStyle="bold"
            android:textSize="22sp"
            android:background="@drawable/btn2"
            android:onClick="previous"
            android:layout_weight="1"
            android:textColor="#8C0303"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Next"
            android:textStyle="bold"
            android:textSize="22sp"
            android:background="@drawable/btn2"
            android:onClick="next"
            android:layout_weight="1"
            android:textColor="#8C0303"
            />
    </LinearLayout>

</RelativeLayout>